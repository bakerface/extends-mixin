{
  "name": "extends-mixin",
  "version": "1.2.2",
  "description": "Predictable micro-service architecture",
  "author": "Chris Baker <mail.chris.baker@gmail.com>",
  "license": "MIT",
  "main": "index.js",
  "devDependencies": {
    "codeclimate-test-reporter": "^0.3.3",
    "mocha": "^3.0.2",
    "nyc": "^8.3.0",
    "xo": "^0.16.0"
  },
  "nyc": {
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bakerface/extends-mixin.git"
  },
  "scripts": {
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "test": "xo && nyc --check-coverage _mocha"
  },
  "xo": {
    "envs": [
      "mocha",
      "node"
    ],
    "space": 2,
    "rules": {
      "babel/array-bracket-spacing": [
        "error",
        "always"
      ],
      "babel/object-curly-spacing": [
        "error",
        "always"
      ],
      "brace-style": [
        "error",
        "stroustrup"
      ]
    }
  }
}
